<idea-plugin>
    <id>com.bearcast</id>
    <name>BearCast</name>
    <version>1.2</version>
    <vendor email="anekrasov@fastmail.com" url="http://ixalender.com">Alexander Nekrasov</vendor>

    <description><![CDATA[
      Plugin for IntelliJ platform for saving pieces of source code to Bear app.
    ]]></description>

    <change-notes><![CDATA[
    <h2>v1.2</h2>
    <ul>
        <li>fix: prevent to make a new Bear's note when there is not selected text</li>
        <li>fix: add removing excess indentations from exported code if it's possible</li>
    </ul>
    ]]></change-notes>

    <idea-version since-build="173.0" until-build="191.*"/>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.bearcast.settings.BearCastUserConfig" overrides="false"/>
        <applicationConfigurable
                groupId="tools"
                displayName="BearCast"
                id="preferences.BearCastConfigurable"
                instance="com.bearcast.settings.BearCastUserConfig"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>com.bearcast.BearCast</implementation-class>
        </component>
        <component>
            <implementation-class>com.bearcast.settings.BearCastUserConfig</implementation-class>
        </component>
    </application-components>

    <actions>
        <group id="BearCast.Menu"
               text="BearCast"
               description="BearCast menu"
               class="com.bearcast.CustomDefaultActionGroup"
               popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="BearCast.CastAction"
                    class="com.bearcast.CastAction"
                    text="Cast to Bear"
                    description="Cast selected text to Bear">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift B" />
            </action>
        </group>
    </actions>

</idea-plugin>